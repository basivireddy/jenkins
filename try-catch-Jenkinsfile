pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('try'){
            steps {
                script {
                try {
                    docker stop test
                   // exit 1
                   // echo "hi"
                } catch (err) {
                    echo "Caught: ${err}"
                    currentBuild.result = 'SUCCESS'
                    //currentStage.result = 'SUCCESS'
                }
                }
            }
        }
        stage('after try') {
            steps {
                echo 'after try'
            }
        }
        
    }
    
    post { 
        always { 
            echo 'I will always say Hello again!'
        }
    }
}
